step_one = input("You are at a crossroad. Where do you want to go? Type 'left' or 'right' \n")
step_one = step_one.lower()

if step_one == 'left':
    print("Game over.")
elif step_one == 'right':
    step_two = input("You come to a lake. There is an island in the middle of the lake. Type 'wait' to wait for a boat. Type 'swim' to swim across. \n")
    step_two = step_two.lower()

    if step_two == 'swim':
        print("Game over.")
    elif step_two == 'wait':
        step_three = input("You arrive at an island unharmed. You see three houses in front of you. One red, one yellow, and one blue. Which color do you choose? \n")
        step_three = step_three.lower()

        if step_three == 'red':
            print("Game over.")
        elif step_three == 'yellow':
            print("Game Over.")
        elif step_three == 'blue':
            print("You win $100k!")

